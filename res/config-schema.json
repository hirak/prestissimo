{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "maxConnections": {
            "type": "integer",
            "minimum": 1
        },
        "minConnections": {
            "type": "integer",
            "minimum": 1
        },
        "verbose": {
            "type": "boolean"
        },
        "insecure": {
            "type": "boolean"
        },
        "capath": {
            "type": "string"
        },
        "userAgent": {
            "type": "string"
        },
        "privatePackages": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "[a-zA-Z0-9-]+/[a-zA-Z0-9-]+"
            }
        }
    }
}
